<div class="custom-header">
  <div class="toggle_style">
    <div class="container" onclick="toggleHeaderContent()">
      <div class="bar1"></div>
      <div class="bar2"></div>
      <div class="bar3"></div>
    </div>
  </div>
  <div class="logo">
    <a href="{{ shop.url }}">
      <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
    </a>
  </div>
  <div class="center-text">
    <h1>{{ section.settings.center_text }}</h1>
  </div>
  <div class="custom_button">
    <a href="{{ section.settings.button_link }}">
      {{- section.settings.button_text -}}
      <span class="arrow">&#8594;</span></a
    >
  </div>
</div>
<script>
  function toggleHeaderContent() {
      var headerContent = document.querySelectorAll('.center-text, .custom_button');
      headerContent.forEach(function (element) {
          element.style.display = (element.style.display === 'none' || element.style.display === '') ? 'block' : 'none';
      });

      var container = document.querySelector('.container');
      container.classList.toggle('change');
  }
</script>

{% schema %}
{
"name": "Custom Header",
"settings": [
{
"type": "image_picker",
"id": "logo",
"label": "Logo"
},
{
"type": "text",
"id": "center_text",
"label": "Center Text"
},
{
"type": "text",
"id": "button_text",
"label": "Button Text"
},
{
"type": "url",
"id": "button_link",
"label": "Button Link"
}
],
"presets":[
{
"name": "Custom Header"
}
]
}
{% endschema %}
